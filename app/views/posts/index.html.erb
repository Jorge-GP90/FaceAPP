<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<%= link_to 'New Post', new_post_path %>
<br>

<p><%= @posts.all %></p>
<br>
<p><%= notice %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% @posts.each do |post|%>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Details', post_path(post.id) %></td>
    <td><%= link_to "Edit", edit_post_path(post.id) %></td>
    <td><%= link_to "Delete", post_path(post.id), method: :delete, data: { confrim: 'Are you sure to delete it'} %></td>
  </tr>
<% end %>
</table>
